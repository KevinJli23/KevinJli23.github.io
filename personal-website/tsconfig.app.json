{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo", // Cache information for incremental builds
    "target": "ES2020", // ES2020 is a solid modern target
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ], // Include libraries needed for DOM and ES features
    "module": "ESNext", // Use ES module system for modern builds
    "skipLibCheck": true, // Skips checking declaration files for faster compilation
    // Bundler mode to use Vite/Webpack bundling
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true, // Allows importing .ts/.tsx files directly
    "isolatedModules": true, // Ensures each file is treated as an isolated module
    "moduleDetection": "force", // Forces detection of modules in some situations
    "noEmit": true, // TypeScript doesn't emit JS, handled by Vite
    "jsx": "react-jsx", // Enables JSX transform for React 17+ and later
    // Linting and strictness settings
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": [
    "src"
  ], // Includes all files in the 'src' directory
  "exclude": [
    "node_modules",
  ]
}